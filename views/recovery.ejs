<script type='text/javascript'>
    var dtstring = "";
    var rowSelected = [];
    var table = $("#dataDisplay").DataTable();
    var UserRole = "<%= user.userrole %>";
    var DropMenu;
    var d;
    var transactionID = [];

    $(document).ready(function() {
        $(".add-row").click(function () {
            var name = $("#name").val();
            var email = $("#email").val();
            var markup = "<tr><td><input type='checkbox' name='record'></td><td>" + name + "</td><td>" + email + "</td></tr>";
            $("table tbody").append(markup);
        });

        // Find and remove selected table rows
        $(".delete-row").click(function () {
            $("table tbody").find('input[name="record"]').each(function () {
                if ($(this).is(":checked")) {
                    $(this).parents("tr").remove();
                }
            });
        });

        $(function () {
            queryAndDisplay("firstName=" + "<%= user.firstName %>" + "&lastName=" + "<%= user.lastName %>");

            flatpickr(".date", {
                dateFormat: "Y-m-d",
                time_24hr: true
            });

            if (UserRole === "Admin") {
                DropMenu = "<li><a href=\"/userprofile\">Profile</a></li>\n" +
                    "\t\t\t<li><a href=\"/userManagement\">User Management</a></li>\n" +
                    "\t\t\t<li><a href=\"/signout\">Sign Out</a></li>";
                $("#userMenu").empty();
                $("#userMenu").append(DropMenu)
            } else if (UserRole === "Regular") {
                DropMenu = "<li><a href=\"/userprofile\">Profile</a></li>\n" +
                    "\t\t\t<li><a href=\"/signout\">Sign Out</a></li>";
                $("#userMenu").empty();
                $("#userMenu").append(DropMenu)
            }
        });

        $('#dataDisplay tbody').on('click', 'tr', function () {
            if ($(this).hasClass('selected')) {
                $(this).removeClass('selected');
                d = table.row(this).data();
                var index = transactionID.indexOf(d[0]);
                transactionID.splice(index, 1);
            } else {
                $(this).addClass('selected');

                d = table.row(this).data();
                d.counter++;
                table.row(this).data(d).draw();

                transactionID.push(d[0]);

                var thArray = [];

                $('#dataDisplay > thead > tr > th').each(function () {
                    thArray.push($(this).text())
                })

                for (var i = 0; i < thArray.length; i++) {
                    rowSelected[i] = {};
                    rowSelected[i].Name = thArray[i];
                    rowSelected[i].Value = d[i];
                }
            }
        });

        $("#recoverButton").on("click", function () {
            if (confirm("Are you sure you would like to recover this row(s)?") === true) {
//                 alert(d);
//                 alert("Row: " + rowSelected[1].Name);
//                alert(rowSelected[2].Name);
//                alert(rowSelected[2].Value);

                var transactionIDStr = "transactionIDStr=";
                for (var i = 0; i < transactionID.length; i++) {
                    transactionIDStr += transactionID[i] + ",";
                    if (i === transactionID.length - 1) {
                        transactionIDStr = transactionIDStr.substring(0, transactionIDStr.length - 1);
//                            alert(usernameStr);
                        update();
                    }
                }

                function update() {

                    $.ajax({
                        url: '/recoverRow',
                        type: 'GET',
                        dataType: 'json',
                        async: false,
                        data: transactionIDStr,
                        success: function (result) {
                            window.location.replace('/userHome')
                        }
                    })
                }
            } else {
                return false;
            }
        });
    });

    function query() {
        var firstName = document.getElementById("firstName").value;
        var lastName = document.getElementById("lastName").value;
        var startDate = document.getElementsByClassName("date")[0].value;
        var endDate = document.getElementsByClassName("date")[1].value;
        var filter1 = document.getElementsByClassName("filter")[0].value;
        var filter2 = document.getElementsByClassName("filter")[1].value;
        var filter3 = document.getElementsByClassName("filter")[2].value;
        var content1 = document.getElementsByClassName("content")[0].value;
        var content2 = document.getElementsByClassName("content")[1].value;
        var content3 = document.getElementsByClassName("content")[2].value;

        var queryStr = "firstName=" + firstName + "&lastName=" + lastName + "&startDate=" + startDate + "&endDate=" + endDate + "&filter1=" + filter1 + "&filter2=" + filter2 + "&filter3=" + filter3 + "&content1=" + content1 + "&content2=" + content2 + "&content3=" + content3;
        //alert(queryStr);
        table.clear();
        table.draw();
        queryAndDisplay(queryStr);
    }

    var queryAndDisplay = function (querystr) {

            $.ajax({
                url: '/filterQueryDeleted',
                type: 'GET',
                dataType: 'json',
                async: false,
                data: querystr,
                success: function (resp) {

                    if (!resp[0].errStatus) {
                        for (var i = 0; i < resp.length; i++) {
                            table.row.add([
                                resp[i].transactionID,
                                resp[i].date,
                                resp[i].trapOwner,
                                resp[i].locationName,
                                resp[i].locationType,
                                resp[i].latitude,
                                resp[i].longitude,
                                resp[i].country,
                                resp[i].province,
                                resp[i].district,
                                resp[i].croppingSystem,
                                resp[i].rota_inter_crop,
                                resp[i].maizeVariety,
                                resp[i].plantingDate,
                                resp[i].fieldSize,
                                resp[i].healthOfMaize,
                                resp[i].lastRainDate,
                                resp[i].entryType,
                                resp[i].pestsPresent,
                                resp[i].fawStage,
                                resp[i].earlyDamageLevel,
                                resp[i].lateDamageLevel,
                                resp[i].naturalEnemies,
                                resp[i].deadLarvae,
                                resp[i].percentInfested,
                                resp[i].control,
                                resp[i].pesticide,
                                resp[i].pestPhoto,
                                resp[i].damagePhoto
                            ]).draw(false);
                        }
                    }
                }
            });
        }
    </script>
