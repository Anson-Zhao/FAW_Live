    $(document).ready(function(){
        $(".add-row").click(function(){
            var name = $("#name").val();
            var email = $("#email").val();
            var markup = "<tr><td><input type='checkbox' name='record'></td><td>" + name + "</td><td>" + email + "</td></tr>";
            $("table tbody").append(markup);
        });

        // Find and remove selected table rows
        $(".delete-row").click(function(){
            $("table tbody").find('input[name="record"]').each(function(){
                if($(this).is(":checked")){
                    $(this).parents("tr").remove();
                }
            });
        });

        $(function() {
            queryAndDisplay("statusDel=" + "Active");

            flatpickr(".date", {
                dateFormat: "Y-m-d",
                time_24hr: true
            });

            if (UserRole === "Admin") {
                DropMenu = "<li><a href=\"/userprofile\">Profile</a></li>\n" +
                    "\t\t\t<li><a href=\"/userManagement\">User Management</a></li>\n" +
                    "\t\t\t<li><a href=\"/signout\">Sign Out</a></li>";
                $("#userMenu").empty();
                $("#userMenu").append(DropMenu)
            } else if ( UserRole === "Regular") {
                DropMenu = "<li><a href=\"/userprofile\">Profile</a></li>\n" +
                    "\t\t\t<li><a href=\"/signout\">Sign Out</a></li>";
                $("#userMenu").empty();
                $("#userMenu").append(DropMenu)
            }
        });

        $('#dataDisplay tbody').on('click', 'tr', function () {
            if ($(this).hasClass('selected')) {
                $(this).removeClass('selected');
            } else {
                $(this).addClass('selected');

                var d = table.row(this).data();
                d.counter++;
                table.row(this).data(d).draw();

                var thArray = [];

                $('#dataDisplay > thead > tr > th').each(function(){
                    thArray.push($(this).text())
                })



                for (var i = 0; i < thArray.length; i++) {
                    rowSelected[i] = {};
                    rowSelected[i].Name = thArray[i];
                    rowSelected[i].Value = d[i];
                }
            }
//            console.log("the array thing: " + thArray);
        });
    });

    function query() {
        var firstName = document.getElementById("firstName").value;
        var lastName = document.getElementById("lastName").value;
        var startDate = document.getElementsByClassName("date")[0].value;
        var endDate = document.getElementsByClassName("date")[1].value;
        var filter1 = document.getElementsByClassName("filter")[0].value;
        var filter2 = document.getElementsByClassName("filter")[1].value;
        var filter3 = document.getElementsByClassName("filter")[2].value;
        var content1 = document.getElementsByClassName("content")[0].value;
        var content2 = document.getElementsByClassName("content")[1].value;
        var content3 = document.getElementsByClassName("content")[2].value;

        var queryStr = "statusDel=" + "Active" + "firstName=" + firstName + "&lastName=" + lastName + "&startDate=" + startDate + "&endDate=" + endDate + "&filter1=" + filter1 + "&filter2=" + filter2 + "&filter3=" + filter3 + "&content1=" + content1 + "&content2=" + content2 + "&content3=" + content3;
        //alert(queryStr);
        if (firstName || lastName || startDate || endDate || filter1 || filter2 || filter3) {
            table.clear();
            queryAndDisplay(queryStr);
        } else {
            queryAndDisplay(queryStr);
        }
    }

    var queryAndDisplay = function (querystr) {

        $.ajax({
            url: '/filterQuery',
            type: 'GET',
            dataType: 'json',
            async: false,
            data: querystr,
            success: function (resp) {
                //alert(resp[0].transactionID);
                for (var i = 0; i < resp.length; i++) {
                    table.row.add( [
                        resp[i].username,
                        resp[i].firstName,
                        resp[i].lastName,
                        resp[i].transactionID,
                        resp[i].date,
                        resp[i].trapOwner,
                        resp[i].locationName,
                        resp[i].locationType,
                        resp[i].latitude,
                        resp[i].longitude,
                        resp[i].country,
                        resp[i].province,
                        resp[i].district,
                        resp[i].croppingSystem,
                        resp[i].rota_inter_crop,
                        resp[i].maizeVariety,
                        resp[i].plantingDate,
                        resp[i].fieldSize,
                        resp[i].healthOfMaize,
                        resp[i].lastRainDate,
                        resp[i].entryType,
                        resp[i].pestsPresent,
                        resp[i].fawStage,
                        resp[i].earlyDamageLevel,
                        resp[i].lateDamageLevel,
                        resp[i].naturalEnemies,
                        resp[i].deadLarvae,
                        resp[i].percentInfested,
                        resp[i].control,
                        resp[i].pesticide,
                        resp[i].pestPhoto,
                        resp[i].damagePhoto
                    ] ).draw( false );
                }
            }
        });
    }
    function downloadCSV(csv, filename) {
        var csvFile;
        var downloadLink;

        // CSV file
        csvFile = new Blob([csv], {type: "text/csv"});

        // Download link
        downloadLink = document.createElement("a");

        // File name
        downloadLink.download = filename;

        // Create a link to the file
        downloadLink.href = window.URL.createObjectURL(csvFile);

        // Hide download link
        downloadLink.style.display = "none";

        // Add the link to DOM
        document.body.appendChild(downloadLink);

        // Click download link
        downloadLink.click();
    }

    function exportTableToCSV(filename) {
        var csv = [];
        var rows = document.querySelectorAll(".selected, thead");

        for (var i = 0; i < rows.length; i++) {
            var row = [], cols = rows[i].querySelectorAll("td, th");

            for (var j = 0; j < cols.length; j++)
                row.push(cols[j].innerText);

            csv.push(row.join(","));
        }

        // Download CSV file
        downloadCSV(csv.join("\n"), filename);

    }

